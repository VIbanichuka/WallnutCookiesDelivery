@model WallnutCookiesDelivery.Web.ViewModels.MenuViewModel

<div class="text-center container">
    <h3 class="text-center">PRIMA MENSA'S HOMEMADE ORESHKI</h3>
</div>
<p>This is the Prima Mensa's homemade menu.</p>
<form method="post">

    <div class="row">

        @foreach (var product in Model.Products)
        {

            <div class="col-lg-2 col-md-6 mb-4">
                <div class="card h-100">
                    <img src="@("~/images/Oreshki/"+product.ImageUrl)" asp-append-version="true" class="card-img-top"/>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center">@product.Name</h5>
                        <div class="mt-auto">
                            <h6 class="card-title text-center m-1">@product.Price.ToString("c")</h6>
                            <button class="btn btn-block btn-primary text-center m-1 mx-auto d-block">CUSTOMIZE</button>
                            <button type="submit" class="btn btn-block btn-danger text-center m-1 mx-auto d-block" asp-controller="Cart" asp-action="AddItemToCart">ADD TO CART</button>
                        </div>
                        <p class="card-text text-center"> @product.Description</p>                
                    </div>
                </div>
            </div>
        }
    </div>

</form>