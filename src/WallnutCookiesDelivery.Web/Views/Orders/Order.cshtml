@using WallnutCookiesDelivery.Web.ViewModels;
@model WallnutCookiesDelivery.Web.ViewModels.OrderViewModel;

<div class="text-center container">
    <h2 class="text-center">PLACE YOUR ORDER</h2>
</div>
<br/>
<form asp-controller="Orders" asp-action="Order" method="post">


    <div class="form-group">
        <label asp-for="AddressType">Address Type:</label>
        <select class="form-select" asp-for="AddressType" asp-items="@Html.GetEnumSelectList<AddressType>()">
        </select>
    </div>

    <div class="form-group">
        <label class="form-label">Country:</label>
        <select class="form-select" asp-items="Model.CountriesSelectList" asp-for="SelectedCountry">
            <option value="">--select a country--</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Customer.City"></label>
        <input type="text" asp-for="Customer.City" /><br />
        <span asp-validation-for="Customer.City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Customer.StreetNumber"></label>
        <input type="number" asp-for="Customer.StreetNumber" /><br />
        <span asp-validation-for="Customer.StreetNumber" class="text-danger"></span><br />
    </div>

    <div class="form-group">
        <label asp-for="Customer.StreetName"></label>
        <input type="text" asp-for="Customer.StreetName" /><br />
        <span asp-validation-for="Customer.StreetName" class="text-danger"></span><br />
    </div>

    <div class="form-group">
        <label asp-for="Customer.DeliveryInstruction"></label>
        <textarea asp-for="Customer.DeliveryInstruction"></textarea>
    </div>
    <br/>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary" asp-controller="Orders" asp-action="Order">CONTINUE</button>
    </div>
</form>
