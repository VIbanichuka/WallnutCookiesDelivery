@model WallnutCookiesDelivery.Web.ViewModels.MenuViewModel

<div class="text-center container">
    <h3 class="text-center">PRIMA MENSA'S HOMEMADE ORESHKI</h3>
</div>

<div class="text-center container">
    <h3 class="text-center">Are you sure you want to delete @Model.Product.Name ?</h3>
</div>

<form asp-action="DeleteProduct" method="post">
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.ProductId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.ProductId)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Name)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Price)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Description)
            </dd>

            <dt class="col-sm-2">
                Product Image
            </dt>
            <dd class="col-sm-10">
                <img decoding="async" src="@("~/images/Oreshki/" + Model.Product.ImageUrl)" asp-append-version="true"
                    width="250px" height="250px" />
            </dd>
        </dl>
    </div>
    <div>
        <a asp-asp-controller="Product" asp-action="Index">Back</a>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Product">DELETE</button>
    </div>
    
</form>
