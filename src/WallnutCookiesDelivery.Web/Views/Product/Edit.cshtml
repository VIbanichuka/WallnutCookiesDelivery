@model WallnutCookiesDelivery.Web.ViewModels.MenuViewModel

<h3>PRIMA MENSA'S HOMEMADE ORESHKI</h3>

<h4>Edit Product</h4>
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="Product.ProductId"></label>
        <input type="text" asp-for="Product.ProductId" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input type="text" asp-for="Product.Name" /><br />
        <span asp-validation-for="Product.Name" class="text-danger"></span><br/>
    </div>

    <div class="form-group">
        <label asp-for="Product.Description"></label>
        <input type="text" asp-for="Product.Description" /><br />
        <span asp-validation-for="Product.Description" class="text-danger"></span><br/>
    </div>

    <div class="form-group">
        <label asp-for="Product.Price"></label>
        <input type="number" asp-for="Product.Price" /><br />
        <span asp-validation-for="Product.Price" class="text-danger"></span><br/>
    </div>

    <div class="form-group">
        <label asp-for="Product.ImageFile" class="control-label"></label>
        <div class="custom-file">
            <input asp-for="Product.ImageFile" class="custom-file-input" id="customFile">
            <label class="custom-file-label" for="customFile">Browse</label>
        </div>
        <span asp-validation-for="Product.ImageFile" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary" asp-action="EditProduct" asp-controller="Product">SAVE</button>
        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Product">DELETE</button>
    </div>
</form>


<div>
    <a asp-controller="Product" asp-action="Index">Back</a>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

